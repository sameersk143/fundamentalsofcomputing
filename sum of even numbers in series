#include <stdio.h>

int main() {
    int n,i,j,sum = 0;
    printf("Enter the size of series: ");
    scanf("%d", &n);
    printf("Enter the series: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &j);
        if(j% 2 == 0) {
            sum += j;
        }
    }
    printf("Sum of even numbers in the series: %d\n", sum);
    return 0;
}
